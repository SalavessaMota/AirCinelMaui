<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirCinelMaui.Pages.ChangePasswordPage"
             Title="Change Password">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

            <Label Text="Change Password" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <!-- Old Password -->
            <Label Text="Old Password" FontSize="18" />
            <Entry x:Name="OldPasswordEntry" IsPassword="True" Placeholder="Enter old password" />

            <!-- New Password -->
            <Label Text="New Password" FontSize="18" />
            <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Enter new password" />

            <!-- Confirm New Password -->
            <Label Text="Confirm New Password" FontSize="18" />
            <Entry x:Name="ConfirmNewPasswordEntry" IsPassword="True" Placeholder="Confirm new password" />

            <!-- Submit Button -->
            <Button Text="Change Password" Clicked="OnChangePasswordClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

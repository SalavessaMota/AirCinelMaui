<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirCinelMaui.Pages.MyAccountPage"
             Title="MyAccountPage">


    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="First Name" />
            <Entry x:Name="FirstNameEntry" Placeholder="Enter your first name" />

            <Label Text="Last Name" />
            <Entry x:Name="LastNameEntry" Placeholder="Enter your last name" />

            <Label Text="Phone Number" />
            <Entry x:Name="PhoneNumberEntry" Placeholder="Enter your phone number" Keyboard="Telephone" />

            <Label Text="Address" />
            <Entry x:Name="AddressEntry" Placeholder="Enter your address" />

            <Button Text="Save Changes" Clicked="OnSaveChangesClicked" />
        </StackLayout>
    </ScrollView>


</ContentPage>